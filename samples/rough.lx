# some simple code demonstrating if-else blocks

x = 2;

if x > 1 {
print("true");
}

if x < 0 {
    x = 0;
} else {
    print("also true");
}

if x % 2 == 1 {
print("true again?");
} else {
    if x / 2 == 33 {
	print("this too?");
    } else {
	print("this is true!");
    }
}

